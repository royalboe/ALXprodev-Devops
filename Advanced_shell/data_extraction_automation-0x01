#!/usr/bin/env bash

# Extract values with jq
unformated_name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
unformatted_type=$(jq -r '.types[0].type.name' data.json)

# Convert height and weight to meters and kg using awk
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1 / 10}')
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1 / 10}')

# Capitalize first letter of name and type using sed
name=$(echo "$unformatted_name" | sed -E 's/^(.)/\U\1/')
type=$(echo "$unformatted_type" | sed -E 's/^(.)/\U\1/')

# Final output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
